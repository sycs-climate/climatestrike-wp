<!DOCTYPE html>
<html lang="{{ site.lang }}">
    <head>
        <meta charset="{{ site.charset }}" />
        {% block title %}
        <title>
            {% if wp_title %}
                {{ wp_title }} - {{ site.name }}
            {% else %}
                {{ site.name }}
            {% endif %}
        </title>
        {% endblock %}
        <meta name="description" content="{{ site.description }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {{ function('wp_head') }}

        {# head tag closed in including file #}
